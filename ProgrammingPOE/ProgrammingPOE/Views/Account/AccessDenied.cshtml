@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="text-danger">Access Denied</h1>
            <div class="alert alert-warning mt-4">
                <h4>You don't have permission to access this resource.</h4>
                <p class="mb-1"><strong>Your Role:</strong> @ViewData["CurrentRole"]</p>
                <p class="mb-1"><strong>Requested Resource:</strong> @ViewData["ReturnUrl"]</p>
            </div>

            <div class="mt-4">
                <p>Please contact an administrator if you believe this is an error.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">Login as Different User</a>
            </div>
        </div>
    </div>
</div>