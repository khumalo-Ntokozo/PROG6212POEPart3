@model ProgrammingPOE.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Login to CMCS</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info">@TempData["Message"]</div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>

                    <!-- Test Credentials Section -->
                    <div class="mt-4">
                        <div class="card bg-light">
                            <div class="card-header">
                                <h6 class="mb-0">Test Login Credentials</h6>
                            </div>
                            <div class="card-body">
                                <small class="text-muted">
                                    <strong>HR Admin:</strong> hr@test.com / Hr123!<br>
                                    <strong>Lecturer:</strong> lecturer@test.com / Lecturer123!<br>
                                    <strong>Coordinator:</strong> coordinator@test.com / Coordinator123!<br>
                                    <strong>Manager:</strong> manager@test.com / Manager123!
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Register", "Account")" class="btn btn-outline-secondary">Register New Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>