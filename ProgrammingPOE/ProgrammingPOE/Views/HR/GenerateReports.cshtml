@model List<Claim>
@{
    ViewData["Title"] = "Generate Reports";
    var totalApprovedAmount = Model.Where(c => c.Status == ClaimStatus.ManagerApproved).Sum(c => c.TotalAmount);
    var totalPendingAmount = Model.Where(c => c.Status == ClaimStatus.Pending || c.Status == ClaimStatus.CoordinatorApproved).Sum(c => c.TotalAmount);
}

<div class="container mt-4">
    <h2>Claims Reports</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Claims</h5>
                    <h3>@Model.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Approved Amount</h5>
                    <h3>R @totalApprovedAmount.ToString("F2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Pending Amount</h5>
                    <h3>R @totalPendingAmount.ToString("F2")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Submission Date</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@(claim.Lecturer?.FullName ?? "N/A")</td>
                        <td>@claim.HoursWorked.ToString("F1")</td>
                        <td>R @claim.HourlyRate.ToString("F2")</td>
                        <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                        <td>
                            <span class="badge @GetStatusBadge(claim.Status)">
                                @GetStatusText(claim.Status)
                            </span>
                        </td>
                        <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                        <td>@(string.IsNullOrEmpty(claim.Notes) ? "No notes" : claim.Notes)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("UserManagement", "HR")" class="btn btn-secondary">Back to User Management</a>
    </div>
</div>

@functions {
    public string GetStatusBadge(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => "bg-warning",
            ClaimStatus.CoordinatorApproved => "bg-info",
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.CoordinatorRejected => "bg-danger",
            ClaimStatus.ManagerRejected => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusText(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => "Pending",
            ClaimStatus.CoordinatorApproved => "Approved by Coordinator",
            ClaimStatus.ManagerApproved => "Approved by Manager",
            ClaimStatus.CoordinatorRejected => "Rejected by Coordinator",
            ClaimStatus.ManagerRejected => "Rejected by Manager",
            _ => status.ToString()
        };
    }
}